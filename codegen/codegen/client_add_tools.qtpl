{% import "github.com/grokify/mogo/text/stringcase" %}
{% func ClientAddTools(objs []stringcase.CaserNoun) %}
package tools

import "github.com/modelcontextprotocol/go-sdk/mcp"

func (tc *ToolsClient) AddTools(svr *mcp.Server) {
	mcp.AddTool(svr, GetIdeaTool(), tc.GetIdea)
	{% for _, obj := range objs %}
	mcp.AddTool(svr, Get{%s obj.Singular.PascalCase() %}Tool(), tc.Get{%s obj.Singular.PascalCase() %}){% endfor %}
}

{% endfunc %}